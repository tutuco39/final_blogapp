<%= image_tag "top-img.jpg", class: "top-img" %>
<div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :account_name %><br />
    <%= f.text_field :account_name, autofocus: true, autocomplete: "account_name", class: "text" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "text" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text" %>
  </div>

  <div class="actions">
    <%= f.submit "CREATE ACCOUNT", class: "btn-primary" %>
  </div>
    <% end %>

  <%= link_to 'LOGIN', new_user_session_path, class: "btn-secondary" %>

</div>
